# direnv configuration for Indieweb2 Bastion
# Multi-chain smart contract platform

use asdf

export PROJECT_ROOT="$(pwd)"
export NODE_ENV="development"
export HARDHAT_NETWORK="localhost"
export DFX_NETWORK="local"

# Tool paths
export SOLC_VERSION="0.8.24"
export VYPER_VERSION="0.3.10"

PATH_add "$PROJECT_ROOT/node_modules/.bin"
PATH_add "$PROJECT_ROOT/.deno/bin"

if [ -f .envrc.local ]; then
  source_env .envrc.local
fi

echo "âœ“ Indieweb2 Bastion environment loaded"
echo "  - Node.js $(node --version 2>/dev/null || echo 'not found')"
echo "  - Deno $(deno --version 2>/dev/null | head -n1 || echo 'not found')"
