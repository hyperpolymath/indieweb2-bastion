# npm configuration for Indieweb2 Bastion

# Use exact versions in package.json
save-exact=true

# Prevent optional dependencies from failing the install
optional=true

# Prefer offline mode
prefer-offline=true

# Audit level
audit-level=moderate

# Engine strict
engine-strict=true

# Fund messages
fund=false

# Legacy peer deps (uncomment if needed)
# legacy-peer-deps=true
